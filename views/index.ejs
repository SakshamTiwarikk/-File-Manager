<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="/stylesheets/style.css"/> -->
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <title>Main Page</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800" type="text" placeholder="Title of the Project" name="title">
                <textarea class="block w-full mt-2 rounded-md outline-none px-5 py-2 resize-none bg-zinc-800" type="text" placeholder="Write about your project description" name="details"></textarea>
                <input class="mt-2 bg-blue-500 px-5 py-2 rounded-md cursor-pointer" type="submit" value="Create Project">
            </form>
        </div>

        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full items-center justify-between mt-3">
                            <a class="text-blue-400 inline-block" href="/file/<%= val %>">Read More.</a>
                            <a class="text-zinc-400" href="/edit/<%= val %>">Edit</a>
                        </div>

                        <!-- Delete Button -->
                        <form action="/delete/<%= val %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this task?');" class="mt-3">
                            <button type="submit" class="bg-red-600 text-white px-4 py-1 rounded-md hover:bg-red-700 transition">
                                Delete
                            </button>
                        </form>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">no tasks yet.</h3>
            <% } %>

            <!-- Hidden template task cards (can be removed if not needed) -->
            <div class="task w-72 hidden px-3 py-4 rounded-md bg-zinc-800">
                <h1 class="text-white text-3xl tracking-tighter">Some task goes here.</h1>
                <a class="text-blue-400 inline-block mt-3" href="">Read More.</a>
            </div>
            <div class="task w-72 hidden px-3 py-4 rounded-md bg-zinc-800">
                <h1 class="text-white text-3xl tracking-tighter">Some task goes here.</h1>
                <a class="text-blue-400 inline-block mt-3" href="">Read More.</a>
            </div>
        </div>
    </div>
</body>
</html>
